    <Grid>
        <Label Content="Kéo Búa Bao Siêu Cấp" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,49,0,0" VerticalAlignment="Top" ></Label>
        <Button Click="PlayBtn" Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Height="37" Width="59" Margin="221,329,0,0" RenderTransformOrigin="0.119,0.731"/>
        <Button Click="SettingBtn" Content="Cấu hình" HorizontalAlignment="Right" VerticalAlignment="Top" Height="37" Width="59" Margin="0,329,221,0"/>
        <Image Source="Img/main.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" Width="149"/>
    </Grid>
</Window>
